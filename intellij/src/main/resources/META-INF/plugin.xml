<idea-plugin>
    <id>de.jowisoftware.rpcsoundscape.intellij.intellij</id>
    <name>Soundscape Syntax</name>
    <vendor email="jochen@jowisoftware.de" url="http://www.jowisoftware.de">Jochen Wierum</vendor>

    <description>
        Syntax Highlighter for Soundscape files.
    </description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <lang.parserDefinition language="Soundscape"
                               implementationClass="de.jowisoftware.rpgsoundscape.intellij.SoundscapeParserDefinition"/>

        <fileType name="Soundscape"
                  implementationClass="de.jowisoftware.rpgsoundscape.intellij.SoundscapeFileType"
                  fieldName="INSTANCE"
                  language="Soundscape"
                  extensions="soundscape"/>

        <lang.syntaxHighlighterFactory
                language="Soundscape"
                implementationClass="de.jowisoftware.rpgsoundscape.intellij.highlight.SoundscapeSyntaxHighlighterFactory"/>

        <colorSettingsPage implementation="de.jowisoftware.rpgsoundscape.intellij.settings.SoundscapeSettingsPage"/>

        <!--
        <completion.contributor
                language="Soundscape"
                implementationClass="SoundscapeCompletionContributor"/>
                -->


        <lang.refactoringSupport
                language="Soundscape"
                implementationClass="de.jowisoftware.rpgsoundscape.intellij.language.SoundscapeRefactoringSupportProvider"/>

        <elementDescriptionProvider
                implementation="de.jowisoftware.rpgsoundscape.intellij.language.CustomElementDescriptionProvider"/>

        <lang.findUsagesProvider
                language="Soundscape"
                implementationClass="de.jowisoftware.rpgsoundscape.intellij.language.SoundscapeFindUsagesProvider"/>

        <annotator
                language="Soundscape"
                implementationClass="de.jowisoftware.rpgsoundscape.intellij.language.SoundscapeAnnotator"/>

        <codeInsight.lineMarkerProvider
                language="Soundscape"
                implementationClass="de.jowisoftware.rpgsoundscape.intellij.language.SoundscapeLineMarkerProvider"/>

        <lang.foldingBuilder
                language="Soundscape"
                implementationClass="de.jowisoftware.rpgsoundscape.intellij.language.SoundscapeFoldingBuilder"/>

        <lang.commenter
                language="Soundscape"
                implementationClass="de.jowisoftware.rpgsoundscape.intellij.language.SoundscapeCommenter"/>

    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>
